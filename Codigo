print("¿Como te llamas?" )
Name = input()
print("Bienvenido," + Name+"," + "me brindas tu edad?" )
Ages = input ()
print("¿Cual es tu altura en metros?" )
altura = float(input()) 
Edad_futura = int(Ages) + 5
altura_cm = altura * int(100) 
print(f"Hola, {Name}!")
print(f"Tienes {Ages} años. En 5 años tendrás {Edad_futura}.")
print(f"Mides {altura} metros, lo que equivale a {altura_cm} centímetros")
print("Índice de Masa Corporal - IMC" )
print("Me brindas por favor tu peso (en kilogramos): ")
Peso_kg = float(input()) 
imc = Peso_kg / int(altura**2) 
print("Tu IMC es de " + str(imc))
